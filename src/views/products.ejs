<!DOCTYPE html>
<html lang="en">
<!-- ////////////////////////////  head /////////////////////////// -->
<%- include('partials/head') %>
<!-- ////////////////////////////  head /////////////////////////// -->

<body>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    <%- include('partials/headerNavbar') %>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    
    
    
    <!-- ////////////////  Cards ofertas //////////////////////////// -->
    <div class="container-fluid products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los productos</h2>
            </div>
            <% products.forEach(product =>{ %>
                
                <div class="col-12 col-sm-6 col-lg-3">
                    
                    <section class="product-box">
                        
                        <a href="/products/<%= product.id %>">
                            <figure class="product-box_image">
                                <img src="images/products/<%= product.image%>" alt="imagen de producto" class="img-fluid">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= product.price %></h2>
                                <span>40% OFF</span>
                                <p>
                                    <%= product.name %><br>
                                    <%= product.size %>
                                </p>
                                <a href="/cart/add/<%= product.id %>"><i class="fas fa-cart-plus" ></i></a>
                            </article>
                        </a>
                    </section>
                </div>
        <% }) %>
        
        <!-- ////////////////  Cards ofertas //////////////////////////// -->
        
        <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
        <%- include('partials/pay-send-return') %>
        <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
        
        
        <!-- //////// footer ////////////////// -->
        <%- include('partials/footer') %>
        <!-- //////// footer ////////////////// -->
        
        
        <!-- scripts -->    
        <script src="/scripts/jquery-3.5.1.min.js"></script>
        <script src="/scripts/bootstrap.min.js"></script>
    </body>
    
    </html>
<!DOCTYPE html>
<html lang="en">
<!-- ////////////////////////////  head /////////////////////////// -->
<%- include('partials/head') %>
<!-- ////////////////////////////  head /////////////////////////// -->

<body>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    <%- include('partials/headerNavbar') %>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center mt-4">
        
        <form action="/products/search/name" method="POST" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar producto" aria-label="Search" name="name" required>
            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Buscar</button>
        </form>
    </div>
</nav>

<% if(msj){ %>
    <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
        <strong> no se encontraron productos con ese nombre</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
   
<% } %>
<% if(products){ %>
    <div class="container mt-4">
        <div class="row">
            <% products.forEach(product =>{ %>
                <div class="col-md-3">
                    <section class="product-box">
                        
                        <a href="/products/<%= product.id %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= product.image%>" alt="imagen de producto" class="img-fluid">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= product.price %></h2>
                                <span>40% OFF</span>
                                <p>
                                    <%= product.name %><br>
                                    <%= product.size %>
                                </p>
                                <a href="/cart/add/<%= product.id %>"><i class="fas fa-cart-plus" ></i></a>
                            </article>
                        </a>
                    </section>
                    
                    
                    
                    
                </div>
                
                <% }) %>
            </div>
            
        </div>   
     <% } %>
        
 
        
        
        
        <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
        <%- include('partials/pay-send-return') %>
        <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
        
        
        <!-- //////// footer ////////////////// -->
        <%- include('partials/footer') %>
        <!-- //////// footer ////////////////// -->
        
        
        <!-- scripts -->    
        <script src="/scripts/jquery-3.5.1.min.js"></script>
        <script src="/scripts/bootstrap.min.js"></script>
    </body>
    
    </html>
<!DOCTYPE html>
<html lang="en">
<!-- ////////////////////////////  head /////////////////////////// -->
<%- include('partials/head') %>
<!-- ////////////////////////////  head /////////////////////////// -->

<body>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    <%- include('partials/headerNavbar') %>
    <!-- ////////////////////////// header Nav /////////////////////// -->
    
    
    <nav class="navbar navbar-expand-lg navbar-light justify-content-around bg-light  mt-4">
        
        
        <form action="/products/search/name" method="POST" class="form-inline my-2 my-lg-0 d-flex w-100 justify-content-around">
            
            <label for="category">Color</label>
            <i class="far fa-hand-point-right d-none d-lg-block d-md-block"></i>
            <select class="form-control" name="colors_id" >
                <option value="">sin efecto</option>        
                <% locals.colors.forEach(color => { %>
                    <option value="<%= color.id %>"><%= color.name %></option>
                    <% }) %>
                </select> 
                
                <label for="name">Nombre</label>
                <i class="far fa-hand-point-right d-none d-lg-block d-md-block"></i>
                <input class="form-control mr-sm-2" type="search" placeholder="Nombre del producto" aria-label="Search" name="name">
                
                <label for="category">Talle</label>
                <i class="far fa-hand-point-right d-none d-lg-block d-md-block "></i>
                <select class="form-control" name="sizes_id">
                    <option value="">sin efecto</option>            
                    <% locals.sizes.forEach(size => { %>
                        <option value="<%= size.id %>"><%= size.name %></option>
                        <% }) %>
                    </select> 
                    
                    
                    <label for="category">Precio</label>
                    <i class="far fa-hand-point-right d-none d-lg-block d-md-block "></i>
                    <select class="form-control" name="price">
                        <option value="1500">Menor a $1.500</option>     
                        <option value="2000">Menor a $2.000</option>
                        <option value="2500">Menor a $2.500</option>            
                        <option value="3000">Menor a $3.000</option> 
                        <option value="3500">Menor a $3.500</option>       
                        <option value="4000">Menor a $4.000</option> 
                        <option value="4500">Menor a $4.500</option>            
                        <option value="5000">Menor a $5.000</option>          
                        <option value="1000000" selected>Cualquier precio</option>          
                    </select>                     
                    <button class="btn btn-secondary my-2 my-sm-0 button" type="submit">Buscar</button>
                </form>
            </div>
        </nav>
        
        <% if(msj){ %>
            <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
                <strong> no se encontraron productos con esas caracteristicas</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <% } %>
            <% if(products){ %>
                <div class="container mt-4">
                    <div class="row">
                        <% products.forEach(product =>{ %>
                            <div class="col-md-3">
                                <section class="product-box">
                                    
                                    <a href="/products/<%= product.id %>">
                                        <figure class="product-box_image">
                                            <img src="/images/products/<%= product.image%>" alt="imagen de producto" class="img-fluid">
                                        </figure>
                                        <article class="product-box_data">
                                            <h2><%= product.price %></h2>
                                            <span>40% OFF</span>
                                            <p>
                                                <%= product.name %><br>
                                                <%= product.size %>
                                            </p>
                                            <a href="/cart/add/<%= product.id %>"><i class="fas fa-cart-plus" ></i></a>
                                        </article>
                                    </a>
                                </section>
                                
                                
                                
                                
                            </div>
                            
                            <% }) %>
                        </div>
                        
                    </div>   
                    <% } %>
                    
                    
                    
                    
                    
                    <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
                    <%- include('partials/pay-send-return') %>
                    <!-- ///////////////// envios ////////////////////// solo falta cargar fotos --> 
                    
                    
                    <!-- //////// footer ////////////////// -->
                    <%- include('partials/footer') %>
                    <!-- //////// footer ////////////////// -->
                    
                    
                    <!-- scripts -->    
                    <script src="/scripts/jquery-3.5.1.min.js"></script>
                    <script src="/scripts/bootstrap.min.js"></script>
                </body>
                
                </html>
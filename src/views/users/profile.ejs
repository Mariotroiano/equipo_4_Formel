<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
<body>
  <!-- ////////////////////////// header Nav /////////////////////// -->
  <%- include('../partials/headerNavbar') %>
  <!-- ////////////////////////// header Nav /////////////////////// -->
  <h1 class="mt-4">Mi perfil</h1>
  <% if(typeof editMsg != 'undefined'){ %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong> <%= editMsg %>!</strong>  
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% }  %> 
  <div class="container mt-4">
        <div class="row ">
          <div class="col-md-4">
                <img src="/images/users/<%= user.image %>" alt="foto de perfil" class="img-fluid shadow">
            </div>

            <div class="col-md-6 flex-column">
               
                <table class="table table-striped table-dark shadow">
                  <thead>
                    <tr>
                      
                      <th scope="col">Nombre</th>
                      <th scope="col">Apellido</th>
                      <th scope="col">Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      
                      <td><%= user.first_name %></td>
                      <td> <%= user.last_name %></td>
                      <td>@<%= user.email%></td>
                    </tr>
                   
                  </tbody>
                </table>
                <div class="row">
                  <div class="col-md-4">
                    <a class="btn btn-secondary" href="/users/<%= user.id %>">Edita tu perfil</a>

                  </div>
                  <div class="col-md-4">
                    <form action="/users/<%= user.id %>?_method=DELETE" method="POST" >
                      <button class="btn btn-secondary">Borrar mi cuenta</button>                   
                     </form>
                  </div>

                </div>
               
              </div>
            
              
              
        </div>
      </div> 
    
      
      <script src="/scripts/jquery-3.5.1.min.js"></script>
      <script src="/scripts/bootstrap.min.js"></script>
    </body>
    
    </html>
    


    
  
<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
<body>
  <!-- ////////////////////////// header Nav /////////////////////// -->
  <%- include('../partials/headerNavbar') %>
  <!-- ////////////////////////// header Nav /////////////////////// -->
  <h1>Mi perfil</h1>
  <% if(typeof editMsg != 'undefined'){ %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong> <%= editMsg %>!</strong>  
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% }  %> 
  <div class="container">
        <div class="row ">
          <div class="col-md-2">
                <img src="/images/users/<%= user.image %>" alt="foto de perfil" class="img-fluid">
            </div>

            <div class="col-md-4 flex-column">
                <div class="col"><p> Nombre : <%= user.first_name %></p></div>
                <div class="col"><p>Apellido : <%= user.last_name %></p></div>
                <div class="col"><p>Email : <%= user.email%></p></div>
                

                <a class="btn btn-secondary" href="/users/<%= user.id %>">Edita tu perfil</a>
                <form action="/users/<%= user.id %>?_method=DELETE" method="POST" >
                 <button class="btn btn-secondary">Borrar mi cuenta</button>                   
                </form>
              </div>
            
              
              
        </div>
      </div> 
    
      
      <script src="/scripts/jquery-3.5.1.min.js"></script>
      <script src="/scripts/bootstrap.min.js"></script>
    </body>
    
    </html>
    


    
  
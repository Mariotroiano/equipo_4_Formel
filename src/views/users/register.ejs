<!DOCTYPE html>
<html lang="en">
<!-- ////////////////////////////  head /////////////////////////// -->
<%- include('../partials/head') %>
<!-- ////////////////////////////  head /////////////////////////// -->

<body class="bg_users_forms">
  <!-- ////////////////////////// header Nav /////////////////////// -->
  <%- include('../partials/headerNavbar') %>
  <!-- ////////////////////////// header Nav /////////////////////// -->
  
  <div class="container">
    <div class="row justify-content-center">
      
      <div class="col-md-6 mt-4">
        <form action="/users/register" method="POST" enctype="multipart/form-data" id="form_register" class="form_style p-3">
          <style>
            .error{
              color: red;
            }
          </style>
          <% if(typeof errors != 'undefined'){ %>
            <% errors.forEach(error =>{ %>
              <p style="color: red;"><%= error.msg %></p>
              <% }) %>
              <% } %>
              
              <div class="form-group">
                <label for="first_name">Nombre</label>
                <input type="text" class="form-control" id="first_name" name="first_name" aria-describedby="namelHelp">
                <span id="first_name" class="hideSpan error">El nombre no puede estar vacio</span>
              </div>
              
              <div class="form-group">
                <label for="last_name">Apellido</label>
                <input type="text" class="form-control" id="last_name" name="last_name" aria-describedby="namelHelp">
                <span id="last_name" class="hideSpan error">El apellido no puede estar vacio</span>
              </div>
              
              <div class="form-group">
                <label for="email">Email </label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                <span id="email" class="hideSpan error">El email no es valido</span>
              </div>
              
              <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" aria-describedby="passwordHelp">
                <span id="password" class="hideSpan error">la contraseña debe tener mas de 5 caracteres y menos de 15</span>
              </div>
              
              <div class="form-group">
                <label for="confirmPassword">Confirmar contraseña</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" aria-describedby="confirmPasswordHelp">
                <span id="confirmPassword" class="hideSpan error">La confirmacion debe ser igual a la contraseña</span>
               
                
              </div>

              <div class="form-group">
                <label for="image">Subí tu foto de perfil</label>
                <input type="file" class="form-control-file" id="image" name="image" accept="image/*"> 
                <span id="image" class="hideSpan error">Debe subir cualquier foto de perfil</span>
              </div>
              
              <button type="submit" class="btn btn-secondary button">Crear cuenta</button>
            </form>
          </div>
        </div>
      </div>
      
      <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.min.js" integrity="sha512-rVYlbsnsxljzvf4sgKzI6ncbNKKxupFhoQ/9ptW7R5fhKE9wQevsfUAZEbJ6xl+VyaiGm3lAKChPLoV/VuaZJA==" crossorigin="anonymous"></script>
      <script src="/scripts/register_validation.js"></script>
      <script src="/scripts/jquery-3.5.1.min.js"></script>
      <script src="/scripts/bootstrap.min.js"></script> 
    </body>
    
    </html>
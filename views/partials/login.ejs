
  <!-- /////////////////// LOGIN- MODAL //////////////////////// -->
  <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="login-modalLabel">Inicia sesión</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- ////////////////////// contenido ventana LOGIN /////////////////////// -->
          
          <form action="/users/login" method="POST">
            <div class="form-group">
              <label for="email">Email </label>
              <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="remember-password" name="remember-password">
              <label class="form-check-label" for="remember-password">Recordar contraseña</label>
            </div>
            
            <button type="submit" class="btn btn-secondary">Iniciar sesión</button>
          </form>
          
          <div class="container">
          <div class="row justify-content-around">
            <div class="modal-footer col-md-6">
              <p>¿No tenes una cuenta?</p>
            </div>
            <div class="modal-footer col-md-6">
              <a href="#"> <button type="button" class="btn btn-secondary" data-target="#register-modal" data-toggle="modal" data-dismiss="modal">Crear cuenta</button></a>
            </div>
          </div>
        </div>
          <!-- ////////////////////// contenido ventana LOGIN/////////////////////// -->
          
        </div>
      </div>
    </div>
  </div>
  
  <!-- /////////////////// LOGIN- MODAL //////////////////////// -->